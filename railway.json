{
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "serviceType": "web"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{PORT}}",
        "HOSTNAME": "0.0.0.0"
      }
    }
  }
}